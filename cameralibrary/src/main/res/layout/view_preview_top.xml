<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_button_layout_height"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp10"
    android:layout_gravity="top"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left">
    <Button
        android:id="@+id/btn_setting"
        android:layout_width="@dimen/top_button_width_height"
        android:layout_height="@dimen/top_button_width_height"
        android:layout_marginStart="@dimen/top_button_margin"
        android:background="@drawable/ic_camera_setting_more_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    <Button
        android:id="@+id/btn_view_photo"
        android:layout_width="@dimen/top_button_width_height"
        android:layout_height="@dimen/top_button_width_height"
        android:background="@drawable/ic_camera_gallery_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btn_switch"
            android:layout_width="@dimen/top_button_width_height"
            android:layout_height="@dimen/top_button_width_height"
            android:background="@drawable/ic_camera_switch_camera_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/top_button_margin"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <com.cgfay.cameralibrary.widget.RatioImageView
            android:id="@+id/iv_ratio"
            android:layout_width="@dimen/top_button_width_height"
            android:layout_height="@dimen/top_button_width_height"
            android:background="@drawable/ic_camera_ratio_34_light" />
    </LinearLayout>

</LinearLayout>